<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:background="@drawable/bghome"
    tools:context="com.mlabs.bbm.firstandroidapp_morningclass.register">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="800px"
        android:id="@+id/imageView"
        android:alpha=".7"
        android:layout_centerInParent="true"
        android:background="@drawable/login"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textFilter"
        android:ems="10"
        android:id="@+id/fname"
        android:textColor="#000000"
        android:backgroundTint="#000000"
        android:layout_above="@+id/lname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:hint="First Name"
        android:textColorHint="#868585"
        android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textFilter"
        android:ems="10"
        android:id="@+id/lname"
        android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
        android:textColor="#000000"
        android:backgroundTint="#000000"
        android:layout_above="@+id/username"
        android:layout_centerHorizontal="true"

        android:hint="Last Name"
        android:textColorHint="#868585" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textFilter"
        android:ems="10"
        android:id="@+id/username"
        android:textColor="#000000"
        android:backgroundTint="#000000"
        android:hint="Username"
        android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM0123456789._"
        android:textColorHint="#868585"
        android:layout_above="@+id/email" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:id="@+id/email"
        android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM0123456789._@"
        android:textColor="#000000"
        android:backgroundTint="#000000"

        android:layout_centerInParent="true"
        android:hint="Email"
        android:textColorHint="#868585" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_centerInParent="true"
        android:id="@+id/pass"
        android:textColor="#000000"
        android:password="true"
        android:backgroundTint="#000000"
        android:layout_below="@id/email"
        android:hint="Password"
        android:textColorHint="#868585" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_centerInParent="true"
        android:id="@+id/cpass"
        android:textColor="#000000"
        android:password="true"
        android:backgroundTint="#000000"
        android:layout_below="@id/pass"
        android:hint="Confirm Password"
        android:textColorHint="#868585" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/button"
        android:onClick="sai"
        android:layout_marginTop="20px"
        android:background="#d5ba5a"
        android:textColor="#000000"
        android:layout_below="@+id/cpass"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:enabled="true" />

</RelativeLayout>
